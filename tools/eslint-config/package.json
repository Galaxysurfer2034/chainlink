{
  "name": "@chainlink/eslint-config",
  "version": "0.0.3",
  "description": "Shared eslint configs for the chainlink project",
  "main": "base.js",
  "repository": "https://github.com/smartcontractkit/chainlink",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "format": "prettier --write \"*.js\"",
    "eslint:config:base": "eslint -c ./base.js --print-config ./base",
    "eslint:config:node": "eslint -c ./node.js --print-config ./base",
    "eslint:config:react": "eslint -c ./react.js --print-config ./base",
    "setup": "echo \"No setup required for @chainlink/eslint-config\""
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^2.1.0",
    "@typescript-eslint/parser": "^2.6.1",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0"
  },
  "devDependencies": {
    "@chainlink/prettier-config": "0.0.2",
    "eslint": "^6.3.0",
    "prettier": "^1.18.2"
  },
  "prettier": "@chainlink/prettier-config"
}
