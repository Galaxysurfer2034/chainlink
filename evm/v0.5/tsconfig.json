{
  "compilerOptions": {
    "incremental": true,
    "target": "es2019",
    "module": "commonjs",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "noEmitOnError": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["test", "src", "@types"]
}
