{
  "private": true,
  "workspaces": [
    "chainlink",
    "operator-gui",
    "example-echo-server",
    "examples-twilio-sms"
  ],
  "scripts": {
    "start": "cd gui && react-static start",
    "build": "cd gui && cross-env NODE_OPTIONS=--max_old_space_size=2048 react-static build",
    "serve": "cd gui && serve dist -p 3000",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "lint": "eslint --fix '**/*.js'",
    "lint-ci": "eslint '**/*.js'",
    "tslint": "tslint -c tslint.json '**/*.ts' '**/*.tsx'",
    "test": "cross-env NODE_ENV=test jest",
    "test-ci": "cross-env NODE_ENV=test yarn jest gui/ --runInBand --coverage --reporters jest-silent-reporter",
    "test-e2e": "cross-env NODE_ENV=test yarn jest e2e/ --runInBand",
    "test-sol": "./internal/ci/truffle_test",
    "watch": "cross-env NODE_ENV=test jest --watchAll --notify",
    "flatten": "./internal/bin/flatten-ropsten"
  },
  "dependencies": {
    "ethlint": "^1.2.3",
    "solium-plugin-zeppelin": "^0.0.2"
  },
  "license": "MIT"
}
